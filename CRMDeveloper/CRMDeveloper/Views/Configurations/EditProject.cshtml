@model CRMCore.Objects.ObjProjectType
@{
    ViewData["Title"] = "Добавить тип проекта";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Создание подтипа</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/Home">Главная</a>
            </li>
            <li>
                <a href="@Url.Action("ProjectTypes","Configurations")">Типы проектов</a>
            </li>
            <li>
                <a href=""><strong>@ViewBag.Title</strong></a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row animated fadeInDown">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Редактирование</h5>
                <div class="ibox-tools">
                    <a class="btn btn-primary btn-xs">
                        <i class="fa fa-save"></i> Сохранить
                    </a>
                    <a class="btn btn-primary btn-default btn-xs" href="@Url.Action("ProjectTypes","Configurations")">
                        <i class="fa fa-chevron-right"></i> Отмена
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form method="post" id="EntityForm" class="form-horizontal">
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <label class="col-md-2 control-label">Название</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Описание</label>
                            <div class="col-md-6">
                                <textarea class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Позиция</label>
                            <div class="col-md-6">
                                <input type="number" class="form-control" asp-for="Position" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/SaveAndReturn.js"></script>
}
