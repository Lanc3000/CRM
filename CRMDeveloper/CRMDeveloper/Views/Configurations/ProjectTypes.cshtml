@model List<CRMCore.Objects.ObjProjectType>
    @{
        ViewData["Title"] = "Типы проектов";
    }
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Типы проектов</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/Home/Index">Главная</a>
                </li>
                <li>
                    <a href="/Configurations/ProjectTypes"><strong>Типы проектов</strong></a>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="row m-t">
        <div class="col-sm-4">
            <div class="btn-group">
                <a class="btn btn-primary" href="/Configurations/EditProject?id=-1">
                    <i class="fa fa-plus-square"></i>
                    Добавить
                </a>
            </div>
        </div>
        <div class="col-sm-6 col-sm-offset-2">
            <form action="#" method="get" class="row">
                <div class="col-sm-5">

                </div>
                <div class="col-sm-7 input-group ">
                    <input disabled="disabled" type="text" placeholder="Введите текст для поиска" class="form-control" value="" name="q">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary"> Поиск</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row animated fadeInDown">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Название</th>
                                <th>Описание</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var projectType in Model)
                            {
                                <tr>
                                    <td hidden="hidden" id="@projectType.Id"></td>
                                    <td>@projectType.Position</td>
                                    <td>@projectType.Name</td>
                                    <td>@projectType.Description</td>
                                    <td class="text-right">
                                        <a class="btn btn-primary btn-xs" href="@Url.Action("EditProject","Configurations",new { id = projectType.Id })">
                                            <i class="fa fa-pencil"></i>
                                            Редактировать
                                        </a>
                                        <a class="btn btn-danger btn-xs">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
