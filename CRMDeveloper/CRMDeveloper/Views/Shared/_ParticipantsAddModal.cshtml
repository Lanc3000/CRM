@using CRMCore.Enums;
@{
    var users = (ViewBag.Users as List<CRMCore.Objects.ObjUser>);
    IEnumerable<SelectListItem> selectListUsers = users.Select(x => new SelectListItem()
    {
        Value = x.Id.ToString(),
        Text = x.Fio,
    });

    IEnumerable<SelectListItem> selectListCurrency = CRMCore.Helpers.EnumHelper.GetLocalizedValues<CurrencyType>().Select(x => new SelectListItem()
    {
        Value = x.Value.ToString(),
        Text = x.DisplayName,
    });

    
}
<div class="modal inmodal fade" id="Add-participant" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" value="" data-sg-participant="Id" />
                    <input type="hidden" value="" data-sg-participant="RootId" />
                    <input type="hidden" value="" data-sg-participant="RootType" />
                    <div class="form-group">
                        <label class="col-sm-2 control-label">ФИО</label>
                        <div class="col-sm-10">
                            <select class="form-control" data-sg-participant="User" asp-items="selectListUsers"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Задача</label>
                        <div class="col-sm-10">
                            <input type="text" data-sg-participant="Ptask" data-provide="typeahead" data-source='["item 1","item 2","item 3"]' class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-xs-2 control-label">Сумма</label>
                        <div class="col-xs-5">
                            <input type="number" class="form-control" data-sg-participant="WorkSum" />
                        </div>
                        <div class="col-xs-5">
                            <select class="form-control" data-sg-participant="Currency" asp-items="selectListCurrency"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Срок</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" data-sg-participant="WorkPeriod" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-primary" id="save-participant">Сохранить</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </div>
</div>