@model Int32
<div class="modal inmodal fade" id="ConverConfirm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Подтверждение создания нового клиента</h4>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Clients" asp-action="ConvertToClients" enctype="multipart/form-data">
                    <input type="hidden" value="@Model" name="PClientid" />
                    <button type="submit" class="btn btn-success btn-block">Да</button>
                    <button type="button" class="btn btn-white btn-block" data-dismiss="modal">Нет</button>
                </form>
            </div>
        </div>
    </div>
</div>