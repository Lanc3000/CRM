@model CRMCore.Objects.ObjClient
<div class="ibox float-e-margins" id="EntityInformation">
    <div class="ibox-title">
        <h5>Основные</h5>
        <div class="ibox-tools">
            <a class="btn btn-primary btn-xs" style="display:none">
                <i class="fa fa-save"></i>
                Сохранить
            </a>
            <a class="btn btn-primary btn-default btn-xs" style="display:none">
                <i class="fa fa-chevron-right"></i>
            </a>
            <a class="btn btn-primary btn-xs ">
                <i class="fa fa-pencil"></i>
                Редактировать
            </a>

            <a class="btn btn-primary btn-danger btn-xs">
                <i class="fa fa-trash" data-index="@Model.Id"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <form method="post" class="form-horizontal" id="EntityForm">
            <input type="hidden" value="@Model.Id" asp-for="Id" />
            <input type="hidden" value="@Model.UserId" asp-for="UserId" />
            <div class="form-group">
                <label class="col-lg-2 control-label">Название компании</label>
                <div class="col-lg-10">
                    <input type="text" disabled="disabled" class="form-control" asp-for="CompanyName" value="@Model.CompanyName" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Описание</label>
                <div class="col-lg-8">
                    <textarea class="form-control" asp-for="Description" disabled="disabled"></textarea>
                </div>
            </div>

            <div class="form-group" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="Bank details">

                <div class="col-lg-8 col-lg-offset-2">
                    <span>Банковские реквизиты</span>
                    <i class="fa fa-chevron-down"></i>
                </div>
            </div>

            <div class="form-group collapse multi-collapse" id="Bank details">
                <label class="col-sm-2 control-label">БИК</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="BIK" disabled="disabled" />
                </div>
            </div>
            <div class="form-group collapse multi-collapse" id="Bank details">
                <label class="col-sm-2 control-label">КорСчет</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="CorrAccount" disabled="disabled" />
                </div>
            </div>

            <div class="form-group collapse multi-collapse" id="Bank details">
                <label class="col-sm-2 control-label">Расчетный счет</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="PaymentAccount" disabled="disabled" />
                </div>
            </div>
            <div class="form-group collapse multi-collapse" id="Bank details">
                <label class="col-sm-2 control-label">Имя банка</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="BankName" disabled="disabled" />
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 control-label">Основной долг</label>
                <div class="col-lg-3 ">
                    <div class="input-group m-b">
                        <strong class="form-control">@Model.Credit</strong>
                        <span class="input-group-addon">₽</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@{Html.RenderPartial("_DeleteEntity", new CRMDeveloper.Models.DeleteModel { Id = Model.Id, RootType = CRMCore.Enums.RootTypes.Client });}